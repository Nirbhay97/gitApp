<div
  class="rounded border border-dark"
  style="margin-top: 20vh; margin-bottom: 20vh; margin-left: 30vw; margin-right: 30vw;"
>
  <div class="container">
    <div class="registration mx-auto d-block w-100">
      <div class="page-header text-center" style="margin-top: 10px;">
        <h3><strong>Sign up </ strong> </h3>
      </div>
      <hr />
      <form
        action="/signup"
        method="post"
      >
        <fieldset>
          <h5><strong> User Registration </strong> </h5>
          <hr />
          <div class="form-group">
            <label for="exampleInputPassword1">Name *</label>
            <input
              type="text"
              class="form-control"
              name="strname"
              placeholder="Enter name"
            />
          </div>

          <div class="form-group">
            <label for="exampleInputPassword1">Username *</label>
            <input
              type="text"
              class="form-control"
              name="username"
              placeholder="Enter username"
            />
          </div>
          <div class="form-group">
            <label for="exampleInputPassword1">Password *</label>
            <input
              type="password"
              class="form-control"
              name="password"
              placeholder="Enter password"
            />
          </div>

          <div class="form-group">
            <label for="exampleInputPassword1">Email *</label>
            <input
              type="email"
              class="form-control"
              name="email"
              placeholder="Enter email"
            />

          <div class="d-flex justify-content-between align-items-center" style="padding-top: 15px;">
            <div class="form-group d-flex justify-content-start">
              <button type="submit" class="btn btn-primary">Submit</button>
            </div>
            <div class="form-check form-group d-flex justify-content-end">
              <button class="btn btn-primary" style="text-color: white;"><a
                  href="/login"
                >Sign in instead</a></button>
            </div>
          </div>
        </fieldset>
      </form>
    </div>
  </div>
</div>